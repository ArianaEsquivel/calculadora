<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FBFFB6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#000"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:height="100dp"
                android:text="0"
                android:textSize="36dp"
                android:textAlignment="textEnd"
                android:background="#FFFFFF"
                android:id="@+id/lbl1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#ABDEE1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/ac"
                android:onClick="borrar"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/c"
                android:onClick="borrar"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DEL"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/del"
                android:onClick="borrar"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/bentre"
                android:onClick="signos"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#ABDEE1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:onClick="numeros"
                android:id="@+id/b7"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b8"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b9"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/bporci"
                android:onClick="signos"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#ABDEE1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b4"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b5"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b6"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/bpor"
                android:onClick="signos"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#ABDEE1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b1"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:onClick="numeros"
                android:id="@+id/b2"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b3"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="−"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/bmen"
                android:onClick="signos"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="#ABDEE1"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/b0"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/bpunt"
                android:onClick="numeros"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/bigual"
                android:onClick="igual"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="28dp"
                android:background="#ABDEE1"
                android:id="@+id/bmas"
                android:onClick="signos"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>